@model Product

<head>
    <link rel="stylesheet" href="~/css/Product/Detail.css" asp-append-version="true">
</head>

<form method="post">
    <input asp-for="Id" hidden />
    <input asp-for="Name" hidden />
    <input asp-for="Image" hidden />
    <input asp-for="Category" hidden />
    <input asp-for="Price" hidden />
    <div class="page-content">
        <section class="landing-page-section">
            <div class="top">
                <h2 class="Product-Name">
                    @Model.Name
                </h2>
            </div>
            <div class="divider"></div>
            <div></div>
            <div class="detail-content">
                <div class="pricing-card">
                    <img src="@Url.Content(@Model.ImageUrl)" alt="">
                    <div class="divider"></div>
                    <ul>
                        <li>
                            <div class="row pl-3">
                                <div class="col-12">
                                    <span class="badge bg-primary text-success p-3 border">@Model.Category</span>
                                    <p class="text-secondary pt-3">@Html.Raw(Model.Description)</p>
                                    <h2>@Model.Name</h2>
                                    <p>Price: @Model.Price</p>
                                    <p>Category: @(Model.Category != null ? Model.Category.Name : "No Category")</p>
                                    <p>Size: @(Model.Size != null ? Model.Size.RAM : "No Size")</p>
                                    <p>Color: @(Model.Color != null ? Model.Color.Name : "No Color")</p>
                                    <p>Brand: @(Model.Brand != null ? Model.Brand.Name : "No Brand")</p>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="pricing-card pricing-card--primary">
                    <div class="pricing-card__price">
                        @string.Format("{0:c}", Model.Price)
                    </div>
                    <div class="divider"></div>
                    <div class="group-button">
                        <ul>
                            <li>
                                <button type="submit" class="btn btn-primary form-control btn-lg"
                                    style="height:50px;">Add to Cart</button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div>
                <a asp-action="Index" class="btn btn-primary btn-lg">Back to List</a>
            </div>
        </section>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}