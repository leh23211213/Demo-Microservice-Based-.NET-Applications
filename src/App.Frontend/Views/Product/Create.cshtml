@model Product

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-black text-center">Create Product</h1>

        <hr />
        <div class="row">
            <!-- Product Name -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Product Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <!-- Price -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Price</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">ImageUrl</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Image" class="form-control" />
                <input asp-for="ImageUrl" hidden class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <!-- Brand Selection -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Brand</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="Brand.Name" asp-items="@ViewBag.BrandList" class="form-select">
                    <option disabled selected>-- Select Brand --</option>
                    <span asp-validation-for="Brand.Name" class="text-danger"></span>
                </select>
            </div>
            <!-- Color Selection -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Color</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="Color.Name" asp-items="@ViewBag.ColorList" class="form-select">
                    <option disabled selected>-- Select Color --</option>
                    <span asp-validation-for="Color.Name" class="text-danger"></span>
                </select>
            </div>
            <!-- Category Selection -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Category</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="Category.Name" asp-items="@ViewBag.CategoryList" class="form-select">
                    <option disabled selected>-- Select Category --</option>
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </select>
            </div>
            <!-- Size Selection -->
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Size</label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="Size.RAM" asp-items="@ViewBag.SizeList" class="form-select">
                    <option disabled selected>-- Select Size --</option>
                </select>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
        <div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}