@page
@model App.Services.AuthAPI.Pages.Account.Register.IndexModel
@{
    ViewData["Title"] = "Register";
    var role_list = (List<string>?)ViewData["roles_message"];
}

<div class="login-page">
    <div class="account-pages my-5 pt-sm-5">
        <div class="justify-content-center row">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="overflow-hidden card">
                    <div class="bg-primary-subtle">
                        <div class="row">
                            <div class="col col-7">
                                <div class="text-primary p-4">
                                    <h4>Welcome &#128079;</h4>
                                    <p>
                                        Create a new account.
                                    </p>
                                </div>
                            </div>
                            <div class="col col-5 align-self-end">
                                <img src="~/lib/image/Login/profile-img.png" alt="" class="img-fluid">
                            </div>
                        </div>
                    </div>
                    <div class="pt-0 card-body">
                        <div class="auth-logo">
                            <div class="avatar-md profile-user-wid mb-4">
                                <span class="avatar-title rounded-circle bg-light">
                                    <img src="~/lib/image/Login/Cshapr-icon-purple-logo.png" alt="CSharp Logo"
                                        class="rounded-circle" height="55">
                                </span>
                            </div>
                        </div>

                        <div class="p-2">
                            <form asp-page="Register">
                                <input type="hidden" asp-for="Input.ReturnUrl" />

                                <div class="form-floating mb-3">
                                    <label asp-for="Input.Email" class="form-label">Email</label>
                                    <input asp-for="Input.Email" class="form-control" placeholder="email@example.com"
                                        autofocus>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <label asp-for="Input.Password" class="form-label">Password</label>
                                    <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                                    <input asp-for="Input.ConfirmPassword" class="form-control"
                                        placeholder="Confirm Password" autocomplete="off" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <label asp-for="Input.Name" class="form-label">Name</label>
                                    <input asp-for="Input.Name" class="form-control" placeholder="Name"
                                        autocomplete="off" />
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <label asp-for="Input.PhoneNumber" class="form-label">Phone Number</label>
                                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number"
                                        autocomplete="off" />
                                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <label asp-for="Input.RoleName" class="form-label">Role</label>
                                    <select asp-for="Input.RoleName" class="form-control"
                                        asp-items="@(new SelectList(role_list))">
                                        <option disabled selected>--Select Role--</option>
                                    </select>
                                    <span asp-validation-for="Input.RoleName" class="text-danger"></span>
                                </div>

                                <button type="submit" class="w-100 btn btn-lg btn-primary" value="register"
                                    name="Input.Button" value="register">Register</button>

                            </form>
                            <div class="mt-4 text-center">
                                <div class="socials-row">
                                    <p>
                                    <section>
                                            @{
                                                @if (Model.Input.ExternalLogins == null && !Model.Input.ExternalLogins.Any())
                                                {
                                                }
                                                else
                                                {
                                                <form id="external-account" asp-area="Account" asp-controller="ExternalLogin"
                                                    asp-action="LoginWithProvider" method="post" class="form-horizontal">
                                                    <div>
                                                        <p>
                                                                @foreach (var provider in Model.Input.ExternalLogins!)
                                                                {
                                                                    if (provider.Name == "Google")
                                                                    {
                                                                    <button type="submit" class="btn btn-primary" name="provider"
                                                                        value="@provider.Name"
                                                                        title="Log in using your @provider.DisplayName account">
                                                                        <img src="~/lib/image/Login/@provider.Name.ToLower()_logo.png"
                                                                            style="height: 30px; width: 30px; "
                                                                            alt="@provider.DisplayName" />
                                                                        Register with @provider.DisplayName
                                                                    </button>
                                                                    }
                                                                }
                                                        </p>
                                                    </div>
                                                </form>
                                                }
                                            }
                                    </section>
                                    </p>
                                    <p>
                                        <a asp-page="../Login/Index"
                                            asp-route-returnUrl="@Model.Input.ReturnUrl">Already
                                            have
                                            account</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
